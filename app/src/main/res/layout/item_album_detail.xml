<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_ablum_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/order_text"
        android:padding="20dp"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#979797"
        android:text="0"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/order_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_item_title"
            android:layout_marginRight="100dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="大标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_item_play_count"
                android:drawableLeft="@mipmap/play_info_icon"
                android:drawablePadding="4dp"
                android:textColor="#979797"
                android:text="14.4万"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detail_item_duration"
                android:drawableLeft="@mipmap/ic_sound"
                android:drawablePadding="4dp"
                android:layout_marginLeft="20dp"
                android:textColor="#979797"
                android:textSize="12sp"
                android:text="05：07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/detail_item_update_time"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#979797"
        android:text="2020-4-16"/>

</RelativeLayout>